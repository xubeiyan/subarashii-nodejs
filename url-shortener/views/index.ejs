<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>短URL生成</h1>
        <form action="/shortUrls" method="POST" class="my-4 row">
            <label for="fullURL" class="visually-hidden">链接</label>
            <div class="col-9">
                <input require placeholder="链接..." type="url" name="fullURL" id="fullURL" class="form-control col mr-2">
            </div>
            <div class="col-3">
                <button type="submit" class="btn btn-success">生成短链接</button>
            </div>
        </form>
        
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>原始链接</th>
                    <th>短链接</th>
                    <th>点击次数</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(short => { %>
                    <tr>
                        <td><a href="<%= short.full %>"><%= short.full %></a></td>
                        <td><a href="<%= short.short %>"><%= short.short %></a></td>
                        <td><%= short.clicks%></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>